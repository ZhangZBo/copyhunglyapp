@import "../../assets/stylus/mixin.styl"
#Header
  color #fff
  overflow hidden
  position relative
  background: rgba(7, 17, 27, 0.5)
  .content-wrapper
    position relative
    display -webkit-box
    -webkit-box-orient horizontal
    padding 24px 12px 18px 24px
    .icon     
      vertical-align top
      img
        border-radius 2px
    .content
      font-size 14px
      margin-left: 10px
      .tilte
        margin 2px 0 7px 0
        .logo
          display inline-block
          vertical-align top
          width 30px
          height 18px
          margin-left 6px
          background-size 30px 18px
          bg-image("brand")
          background-repeat no-repeat
        .name
          font-size 16px
          font-weight bold
          line-height 18px
          margin-left 5px
      .description
        margin-bottom 10px
        line-height 12px
        font-size 12px
      .support
        .icon
          display inline-block       
          width 12px
          height 12px
          margin 3px 4px 0px 0px 
          background-size 12px 12px
          background-repeat no-repeat
          &.decrease
            bg-image('decrease_1')
        .text
          font-size 12px
    .supports-count
      position absolute
      display inline-block
      background-color rgba(0,0,0,.2)
      padding 0 8px
      line-height 24px
      font-size 10px
      bottom 14px
      right 15px;
      border-radius: 12px
      .layui-icon
        font-size: 10px
  .bg
    position absolute
    width 100%
    height 100%
    top 0
    right 0
    z-index -1
    filter blur(10px)
  .detail
    position fixed
    width 100%
    height 100%
    top 0
    right 0
    background: rgba(7,17,27,.8);
    &.fade-enter-active
      animation bounce-in .5s
    &.fade-leave-active
      animation bounce-out .5s
    @keyframes bounce-in{
      0%{
        transform: scale(0)
        }
      50%{
        transform: scale(1.5)
        }
      100%{
        transform: scale(1)
        }
      }
    @keyframes bounce-out{
      0%{
        transform: scale(0)
        }
      50%{
        transform: scale(1.5)
        }
      100%{
        transform: scale(1)
        }
      }
  

    
        
      